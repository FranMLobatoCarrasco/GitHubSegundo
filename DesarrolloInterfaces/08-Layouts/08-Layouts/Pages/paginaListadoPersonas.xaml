<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_08_Layouts.Pages.paginaListadoPersonas"
             Title="paginaListadoPersonas">
    <VerticalStackLayout>

        <ListView x:Name="ListViewPersonas">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.RowSpan="2"
                           Source="{Binding Imagen}"
                           Aspect="AspectFill"
                           HeightRequest="60"
                           WidthRequest="60" />
                            
                            <Label Grid.RowSpan="2" Text="{Binding Id}" FontAttributes="Bold" VerticalOptions="Center" Margin="0,0,20,0"/>

                            <Label Grid.Column="1" Text="{Binding Nombre}" FontAttributes="Bold" />

                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Apellido}" FontAttributes="Italic" VerticalOptions="End" />

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </VerticalStackLayout>
</ContentPage>