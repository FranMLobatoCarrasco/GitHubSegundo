@model Entidades.clsPersona

<title>Editar Persona</title>

<h2>Editar Persona</h2>
<form method="post">
    <label>Id: </label>
    @Html.TextBox("Id")  <br />

    <label>Nombre: </label>
    @Html.TextBoxFor(m => Model.Nombre)  <br />

    <label>Apellido: </label>
    <input type="text" name="Apellido" value="@Model.Apellido" /><br />

    <button name="submit">Enviar</button>
</form>
