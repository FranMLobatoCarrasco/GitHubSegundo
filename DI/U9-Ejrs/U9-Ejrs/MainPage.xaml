<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="U9_Ejrs.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Slider
                x:Name="slider"
                Minimum="0"
                Maximum="100"
                />

            <Label Text="Texto Label"
                   FontSize="{Binding Source={x:Reference slider},
                                            Path=Value,
                                            Mode=OneWay}" 
                   />

            <Entry
                x:Name="entry"
                TextChanged="onTxtChanged"
                Text="{Binding Source={x:Reference slider},
                                    Path=Value,
                                    Mode=TwoWay,
                                    StringFormat='{0:F0}'}"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
