<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Solares.Pages.Login"
             Title="Login">
    <VerticalStackLayout>

        <Image Source="logo.png" HeightRequest="150"/>

        <VerticalStackLayout HorizontalOptions="Center">
            <Label FontSize="32" Text="Login" HorizontalOptions="Center"/>

            <HorizontalStackLayout>
                <Label FontSize="16" Text="Usuario"/>
                <Entry FontSize="16" Placeholder="Usuario"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label FontSize="16" Text="Contraseña"/>
                <Entry IsPassword="True" FontSize="16" Placeholder="Contraseña"/>
            </HorizontalStackLayout>
            <Button Text="Login" Clicked="onLoginClicked"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>